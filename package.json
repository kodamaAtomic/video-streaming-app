{
  "name": "video-streaming-app",
  "version": "1.0.0",
  "description": "Video streaming application with thumbnail generation",
  "main": "dist/server/app.js",
  "scripts": {
    "init": "node scripts/init.js",
    "prebuild": "npm run init",
    "dev": "npm run init && concurrently \"npm run build:watch\" \"npm run serve:dev\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "node dist/server/app.js",
    "serve:dev": "nodemon dist/server/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "npm run clean:build && npm run clean:thumbnails",
    "clean:build": "rimraf dist",
    "clean:thumbnails": "find storage/thumbnails -name '*.png' -delete 2>/dev/null || true",
    "clean:all": "npm run clean && npm run clean:videos && npm run clean:node_modules",
    "clean:videos": "find storage/videos -type f -delete 2>/dev/null || true",
    "clean:node_modules": "rimraf node_modules",
    "rebuild": "npm run clean && npm install && npm run build"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.0",
    "concurrently": "^8.2.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
